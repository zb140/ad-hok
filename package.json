{
  "name": "@zb140/ad-hok",
  "type": "module",
  "version": "0.1.2-dev.0",
  "description": "Recompose-style React hooks",
  "scripts": {
    "build:esm": "tsc -p tsconfig.build.json && echo '{\"type\": \"module\"}' > ./lib/esm/package.json",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir ./lib/cjs && echo '{\"type\": \"commonjs\"}' > ./lib/cjs/package.json",
    "build": "npm run build:esm && npm run build:cjs",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "generateFlowMaxType": "node scripts/generateFlowMaxType.js > src/flowMaxType.ts && prettier --write src/flowMaxType.ts"
  },
  "files": [
    "lib/**/*"
  ],
  "main": "./lib/cjs/index.js",
  "types": "./lib/cjs/index.d.ts",
  "exports": {
    "require": {
      "default": "./lib/cjs/index.js",
      "types": "./lib/cjs/index.d.ts"
    },
    "import": {
      "default": "./lib/esm/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  },
  "keywords": [
    "composition",
    "utilities",
    "toolkit",
    "react",
    "hooks",
    "react-hooks",
    "recompose"
  ],
  "author": "Zach Bean <forty2@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zb140/ad-hok.git"
  },
  "bugs": {
    "url": "https://github.com/zb140/ad-hok/issues"
  },
  "homepage": "https://github.omc/zb140/ad-hok",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^10.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^16.9.41",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash": "^4.17.15",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.4"
  }
}
